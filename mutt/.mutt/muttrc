set confirmappend=no
set connect_timeout=5
set date_format="%A, %e %B %Y, %l:%M %P %Z"
set delete=yes
set dsn_notify=never
set edit_headers=yes
set editor=emacsclient
set envelope_from=yes
set fast_reply=yes
set followup_to=yes
set force_name=no
set forward_quote=no
set hdrs=yes
set header_cache=~/var/cache/mutt/header_cache
set help=no
set hidden_host=yes
set hide_limited=yes
set hide_missing=yes
set history_file=~/var/cache/mutt/history
set honor_followup_to=yes
set ignore_list_reply_to=yes
set imap_delim_chars=""
set imap_keepalive=900
set imap_passive=yes
